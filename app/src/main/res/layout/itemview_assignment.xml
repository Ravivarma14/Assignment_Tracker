<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#00FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_student_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="20dp"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_project_name"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@id/tv_final_payment_status_hint"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:singleLine="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="Research"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAllCaps="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_final_payment_status_hint"
                android:layout_alignParentEnd="true"
                android:singleLine="true"
                android:text="Final Payment Status"
                android:textSize="16sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_final_payment_status"
                android:layout_below="@id/tv_final_payment_status_hint"
                android:layout_alignParentEnd="true"
                android:text="Pending"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textAllCaps="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_in_date_hint"
                android:layout_below="@id/tv_final_payment_status"
                android:layout_marginTop="20dp"
                android:text="In Date"
                android:textSize="16sp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_in_date"
                android:layout_below="@id/tv_in_date_hint"
                app:layout_constraintTop_toBottomOf="@id/tv_in_date_hint"
                app:layout_constraintStart_toStartOf="parent"
                android:text="14-11-2000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textAllCaps="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_out_date_hint"
                android:layout_below="@id/tv_final_payment_status"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:text="Out Date"
                android:textSize="16sp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_out_date"
                android:layout_below="@id/tv_out_date_hint"
                android:layout_alignParentEnd="true"
                android:text="20-11-2000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textAllCaps="true"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_price_hint"
                android:layout_below="@id/tv_in_date"
                android:layout_marginTop="10dp"
                android:text="Price"
                android:textSize="16sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_price"
                android:layout_below="@id/tv_price_hint"
                android:text="2000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textAllCaps="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_advance_hint"
                android:layout_below="@id/tv_out_date"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:text="Advance"
                android:textSize="16sp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_advance"
                android:layout_below="@id/tv_advance_hint"
                android:layout_alignParentEnd="true"
                android:text="1000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textAllCaps="true"/>


        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>