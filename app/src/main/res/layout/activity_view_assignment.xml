<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".presentation.ui.ViewAssignmentActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_project_name_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:textSize="28sp"
        android:textStyle="bold"
        style="@style/WhiteText"
        android:text="project name"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_semester_container"
        app:layout_constraintTop_toBottomOf="@id/tv_project_name_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"
        android:layout_marginTop="30dp"
        app:strokeWidth="0dp"
        app:cardCornerRadius="20dp"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_semester_view"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="2nd"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_semester_view_hint"
        android:textSize="16sp"
        android:text="Semester"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_subject_container"
        app:layout_constraintTop_toBottomOf="@id/cv_semester_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"
        app:strokeWidth="0dp"
        app:cardCornerRadius="20dp"
        app:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cv_semester_container"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_subject_view"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="Physics"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_subject_view_hint"
        android:textSize="16sp"
        android:text="Subject"/>

    </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_in_date_container"
        app:layout_constraintTop_toBottomOf="@id/cv_subject_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"
        app:strokeWidth="0dp"
        app:cardCornerRadius="20dp"
        app:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_in_date_view"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="14-11-2000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_in_date_view"
        app:layout_constraintStart_toStartOf="@id/tv_in_date_view"
        android:id="@+id/tv_in_date_view_hint"
        android:textSize="16sp"
        android:text="In Date"/>

    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_out_date_container"
        app:layout_constraintTop_toBottomOf="@id/cv_in_date_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"
        app:strokeWidth="0dp"
        app:cardCornerRadius="20dp"
        app:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cv_in_date_container"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_out_date_view"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="20-11-2000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_out_date_view"
        app:layout_constraintStart_toStartOf="@id/tv_out_date_view"
        android:id="@+id/tv_out_date_view_hint"
        android:textSize="16sp"
        android:text="Out Date"/>

    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_input_doc_container"
        app:layout_constraintTop_toBottomOf="@id/cv_out_date_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"
        app:strokeWidth="0dp"
        app:cardCornerRadius="20dp"
        app:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cv_out_date_container"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_input_doc_view"
        android:ellipsize="marquee"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="documentation.pdf"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_input_doc_view"
        app:layout_constraintStart_toStartOf="@id/tv_input_doc_view"
        android:id="@+id/tv_input_doc_view_hint"
        android:textSize="16sp"
        android:text="Input Document"/>

    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_price_container"
        app:layout_constraintTop_toBottomOf="@id/cv_input_doc_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"
        app:strokeWidth="0dp"
        app:cardCornerRadius="20dp"
        app:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cv_input_doc_container"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_price_view"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="5000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_price_view"
        app:layout_constraintStart_toStartOf="@id/tv_price_view"
        android:id="@+id/tv_price_view_hint"
        android:textSize="16sp"
        android:text="Price"/>

    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_advance_container"
        app:layout_constraintTop_toBottomOf="@id/cv_price_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"
        app:strokeWidth="0dp"
        app:cardCornerRadius="20dp"
        app:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cv_price_container"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_advance_view"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="1000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_advance_view"
        app:layout_constraintStart_toStartOf="@id/tv_advance_view"
        android:id="@+id/tv_advance_view_hint"
        android:textSize="16sp"
        android:text="Advance"/>

    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_advance_ss_container"
        app:layout_constraintTop_toBottomOf="@id/cv_advance_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"
        app:strokeWidth="0dp"
        app:cardCornerRadius="20dp"
        app:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cv_image_advance_ss_container"
            app:cardCornerRadius="20dp"
            app:strokeWidth="0dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_advance_container"
        android:id="@+id/iv_advance_ss"/>

        </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_advance_ss"
        app:layout_constraintStart_toStartOf="@id/iv_advance_ss"
        android:id="@+id/tv_advance_ss_view_hint"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:text="Advance ScreenShot"/>

    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_final_container"
        app:layout_constraintTop_toBottomOf="@id/cv_advance_ss_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"
        app:strokeWidth="0dp"
        app:cardCornerRadius="20dp"
        app:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cv_advance_ss_container"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_final_payment_view"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="4000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_final_payment_view"
        app:layout_constraintStart_toStartOf="@id/tv_final_payment_view"
        android:id="@+id/tv_final_payment_view_hint"
        android:textSize="16sp"
        android:text="Final Payment"/>

    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_final_ss_container"
        app:layout_constraintTop_toBottomOf="@id/cv_final_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"
        app:strokeWidth="0dp"
        app:cardCornerRadius="20dp"
        app:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cv_image_final_ss_container"
            app:cardCornerRadius="20dp"
            app:strokeWidth="0dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_final_container"
        android:id="@+id/iv_final_payment_ss"/>

        </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_final_payment_ss"
        app:layout_constraintStart_toStartOf="@id/iv_final_payment_ss"
        android:id="@+id/tv_final_ss_view_hint"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:text="Final ScreenShot"/>

    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>