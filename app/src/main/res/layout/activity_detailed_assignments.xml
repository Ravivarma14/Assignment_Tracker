<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.DetailedAssignmentsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/header_text"
        style="@style/WhiteText"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="28sp"
        android:text="List Of Assignments"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cl_student_details_container"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/header_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tv_student_name"
            android:layout_marginTop="10dp"
            style="@style/WhiteText"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="Pavan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_student_name"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tv_phone_no"
            style="@style/WhiteText"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="9897387944"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_phone_no"
            app:layout_constraintStart_toStartOf="@id/tv_phone_no"
            android:id="@+id/tv_phone_hint"
            android:textSize="16sp"
            style="@style/WhiteText"
            android:text="mobile number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tv_university"
            style="@style/WhiteText"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="Jntuh"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_university"
            app:layout_constraintEnd_toEndOf="@id/tv_university"
            android:id="@+id/tv_university_hint"
            style="@style/WhiteText"
            android:textSize="16sp"
            android:text="University"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_university_hint"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tv_refer_by"
            android:layout_marginTop="10dp"
            style="@style/WhiteText"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="Jai"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_refer_by"
            app:layout_constraintEnd_toEndOf="@id/tv_refer_by"
            android:id="@+id/tv_refer_by_hint"
            android:textSize="16sp"
            style="@style/WhiteText"
            android:text="Refer by"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:id="@+id/recyclerview_assignments"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_student_details_container"/>

   <!-- <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:id="@+id/fab_add_assignment"
        android:backgroundTint="@color/white"
        android:src="@drawable/baseline_add_24"/>
-->
</androidx.constraintlayout.widget.ConstraintLayout>