<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/header_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        style="@style/WhiteText"
        android:textSize="28sp"
        android:textStyle="bold"
        android:text="Add Assignment"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/cv_choose_student_container"
        app:strokeColor="@color/black"
        android:backgroundTint="@color/transparent"
        android:layout_margin="10dp"
        app:contentPaddingTop="15dp"
        app:cardCornerRadius="5dp">

    <AutoCompleteTextView
        android:id="@+id/student_autoCompleteTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        style="@style/WhiteText"
        android:hint="Select a student" />

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/cv_choose_student_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/til_semester">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/WhiteText"
            android:hint="Semester"
            android:id="@+id/et_semester"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/til_semester"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/til_subject">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/WhiteText"
            android:hint="Subject"
            android:id="@+id/et_subject"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/til_subject"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/til_project">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/WhiteText"
            android:hint="Project"
            android:id="@+id/et_project"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/til_project"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/til_auto_fill_in_date">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/WhiteText"
            android:hint="14-11-2000"
            android:id="@+id/et_auto_fill_in_date"/>

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/iv_pick_in_date"
        android:layout_marginTop="10dp"
        android:src="@drawable/baseline_calendar_month_24"
        app:layout_constraintTop_toBottomOf="@id/til_project"
        app:layout_constraintTop_toTopOf="@id/til_auto_fill_in_date"
        app:layout_constraintBottom_toBottomOf="@id/til_auto_fill_in_date"
        app:layout_constraintStart_toEndOf="@id/til_auto_fill_in_date"
        app:layout_constraintEnd_toEndOf="parent" />



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/til_auto_fill_in_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/til_out_date">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/WhiteText"
            android:hint="14-11-2000"
            android:id="@+id/et_out_date"/>

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/iv_pick_out_date"
        android:layout_marginTop="10dp"
        android:src="@drawable/baseline_calendar_month_24"
        app:layout_constraintTop_toBottomOf="@id/til_auto_fill_in_date"
        app:layout_constraintTop_toTopOf="@id/til_out_date"
        app:layout_constraintBottom_toBottomOf="@id/til_out_date"
        app:layout_constraintStart_toEndOf="@id/til_out_date"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_selected_input_doc"
        app:layout_constraintTop_toBottomOf="@id/til_out_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_select_input_doc"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        style="@style/WhiteText"
        android:textSize="20sp"
        android:ellipsize="start"
        android:text="Input Document"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select"
        android:id="@+id/btn_select_input_doc"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/til_out_date"
        app:layout_constraintTop_toTopOf="@id/tv_selected_input_doc"
        app:layout_constraintBottom_toBottomOf="@id/tv_selected_input_doc"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_selected_input_doc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/til_price">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            style="@style/WhiteText"
            android:hint="Price" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/til_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/til_advance">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/WhiteText"
            android:hint="Advance"
            android:inputType="number"
            android:id="@+id/et_advance"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_advance_ss"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/til_advance"
        app:layout_constraintRight_toLeftOf="@id/btn_select_advance_ss"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/WhiteText"
        android:ellipsize="start"
        android:textSize="20sp"
        android:text="Advance ss"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select"
        android:id="@+id/btn_select_advance_ss"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/til_advance"
        app:layout_constraintTop_toTopOf="@id/tv_advance_ss"
        app:layout_constraintBottom_toBottomOf="@id/tv_advance_ss"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_advance_ss"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/til_final_payment">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_final_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/WhiteText"
            android:inputType="number"
            android:hint="Final Payment" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_final_payment_ss"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/til_final_payment"
        app:layout_constraintRight_toLeftOf="@id/btn_select_final_payment_ss"
        app:layout_constraintStart_toStartOf="parent"
        android:ellipsize="start"
        style="@style/WhiteText"
        android:textSize="20sp"
        android:text="Final payment ss"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select"
        android:id="@+id/btn_select_final_payment_ss"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/til_final_payment"
        app:layout_constraintTop_toTopOf="@id/tv_final_payment_ss"
        app:layout_constraintBottom_toBottomOf="@id/tv_final_payment_ss"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add_assignment"
        android:text="Add Assignment"
        android:textSize="24sp"
        app:cornerRadius="25dp"
        app:layout_constraintTop_toBottomOf="@id/btn_select_final_payment_ss"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>