<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:backgroundTint="@color/red"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_student_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"
        app:strokeWidth="0dp"
        app:cardCornerRadius="20dp"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_project_name"
                android:layout_alignParentStart="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:singleLine="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="Research"
                android:textSize="24sp"
                style="@style/RedText"
                android:textStyle="bold"
                android:textAllCaps="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_student_hint"
                android:layout_below="@id/tv_project_name"
                android:layout_marginTop="20dp"
                android:text="Student"
                style="@style/BlackText"
                android:textSize="16sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_student_name"
                android:layout_below="@id/tv_student_hint"
                app:layout_constraintTop_toBottomOf="@id/tv_student_hint"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Varma"
                style="@style/RedText"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textAllCaps="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_out_date_hint"
                android:layout_alignParentEnd="true"
                android:text="Out Date"
                android:textSize="16sp"
                style="@style/BlackText"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_out_date"
                android:layout_below="@id/tv_out_date_hint"
                android:layout_alignParentEnd="true"
                android:text="20-11-2000"
                style="@style/RedText"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textAllCaps="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_semester_hint"
                android:layout_below="@id/tv_out_date"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:text="Semester"
                style="@style/BlackText"
                android:textSize="16sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_semester"
                android:layout_below="@id/tv_semester_hint"
                android:layout_alignParentEnd="true"
                android:text="1st"
                style="@style/RedText"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textAllCaps="true"/>


        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>